<?xml version="1.0" encoding="utf-8"?>
<com.spc.sedentary.tips.view.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/right_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal"
        android:text="right"
        android:textColor="@color/white">

        <LinearLayout
            android:id="@+id/mllRecover"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#cfcfcf"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恢复"
                android:textColor="#1baddc" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mllDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ff0000"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_delete_white" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/item_remark" />

</com.spc.sedentary.tips.view.SwipeItemLayout>